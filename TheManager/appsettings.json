{
  "Logging": {
    //for Debug Logging Provider
    "Debug": {
      "LogLevel": {
        //"Default" Category is our project namespace
        "Default": "Warning",
        "TheManager.Controllers.HomeController": "Warning",
        "TheManager.Models.SqlEmployeeRepository": "Warning",
        //VS Output Window TheManager.Controllers.ErrorController:Error:
        //All the Warning logs and higher that comming from Microsoft category must be logged and displayed.
        "Microsoft": "Warning"
      }
    },
    //for the rest of Logging Providers
    "LogLevel": {
      "Default": "Trace",
      "TheManager.Controllers.HomeController": "Trace",
      "TheManager.Models.SqlEmployeeRepository": "Trace",
      "Microsoft": "Warning"
    }
  },
  "AllowedHosts": "*",
  "MyKey": "Value of MyKey from appsettings.json",
  "ConnectionStrings": {
  "EmployeeDbConnection": "server=(localdb)\\ProjectsV13; Database=Manager; Trusted_Connection=true"
  }
